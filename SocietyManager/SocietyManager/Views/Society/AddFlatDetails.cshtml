@model SocietyManager.Models.SocietyModels.FlatListsModel

@{
    ViewBag.Title = "AddFlatDetails";
}


@{
    string sname = ((string)Session["societyName"]);
}

<h3>Add Flat Details for Society: @sname </h3><br />

@using (Html.BeginForm("AddFlatDetails", "Society", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    

    <div class="form-horizontal">
   

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.flatsInSociety.First().FlatNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.flatsInSociety.First().BHK)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.flatsInSociety.First().Area)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.flatsInSociety.First().IsRented)
                </th>
            </tr>

            @for (int i = 0; i < Model.flatsInSociety.Count(); i++)
            {

                <tr>
                    <td>
                        @Html.EditorFor(modelItem => Model.flatsInSociety[i].FlatNumber)
                        @Html.ValidationMessageFor(model => Model.flatsInSociety[i].FlatNumber, "", new { @class = "text-danger" })
                    </td>

                    <td>
                        @Html.EditorFor(modelItem => Model.flatsInSociety[i].BHK)
                        @Html.ValidationMessageFor(model => Model.flatsInSociety[i].BHK, "", new { @class = "text-danger" })
                    </td>

                    <td>
                        @Html.EditorFor(modelItem => Model.flatsInSociety[i].Area)
                        @Html.ValidationMessageFor(model => Model.flatsInSociety[i].Area, "", new { @class = "text-danger" })
                    </td>

                    <td>
                        @Html.EditorFor(modelItem => Model.flatsInSociety[i].IsRented)

                        @Html.ValidationMessageFor(model => Model.flatsInSociety[i].IsRented, "", new { @class = "text-danger" })
                    </td>
                </tr>
            }

        </table>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}